<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="85dp"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:id="@+id/imageView12"
                android:src="@drawable/recomendacion_4"
                android:background="#40000000"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="Todos los comerciantes de leña deben contar con patente municipal, documentación tributaria y forestal, que acredite el origen lícito de la leña."
                android:id="@+id/textView7"
                android:background="#40000000"
                android:textColor="#fff"
                android:gravity="center|left"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:id="@+id/imageView14"
                android:background="#66000000"
                android:src="@drawable/recomendacion_5"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="En los días de restricción se recomienda el uso de mascarillas en adultos mayores, niños, embarazadas y enfermos crónicos."
                android:id="@+id/textView8"
                android:background="#66000000"
                android:textColor="#fff"
                android:gravity="center|left"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="85dp"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:id="@+id/imageView02"
                android:src="@drawable/recomendacion_6"
                android:background="#40000000"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="Evite que en su cañon se forme una capa de creosota y hollín, que aumenta el riesgo de inflamación, disminuye la capacidad de calefacción y su estufa contamina más."
                android:id="@+id/textView80"
                android:background="#40000000"
                android:textColor="#fff"
                android:gravity="center|left"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/white_point"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:src="@drawable/white_point_selected"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:src="@drawable/white_point"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:src="@drawable/white_point"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>